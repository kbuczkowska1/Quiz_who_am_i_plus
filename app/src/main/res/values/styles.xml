<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#f39d14</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#f39d14</item>
        <!-- Background color of text in the app -->
        <item name="android:textColor">#FFFFFF</item>
        <!-- Background color of Background in the app -->
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="CustomButtonStyle1" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="who_am_i" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">30dp</item>

    </style>

    <style name="ChackBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>

